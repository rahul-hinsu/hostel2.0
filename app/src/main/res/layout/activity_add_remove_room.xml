<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.FacultyDashboardItem.AddRemoveRoom"
    android:background="@drawable/background"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backarrowedit"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/backarrow"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hellofaculty"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/raleway"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentLeft="true"/>


                </LinearLayout>
                <TextView
                    android:id="@+id/txt_logoutedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Logout"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/totalroom"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="60dp"
                android:textSize="22dp"
                android:fontFamily="@font/raleway"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addRoom"
                android:background="@drawable/buttonbackground"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:textColor="#227E7C"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emptyRoom"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="30dp"
                android:textSize="22dp"
                android:fontFamily="@font/raleway" />


            <!--        Insert recycler view here-->

        </LinearLayout>

    </ScrollView>

</LinearLayout>