<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity.SuccessForgetPassword"
    android:background="@drawable/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backarrowsucesfrgtpass"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/backarrow"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Success"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:fontFamily="@font/raleway"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mainmessfrgtpass"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:textSize="25sp"
                android:fontFamily="@font/raleway"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center_horizontal" />


            <Button
                android:id="@+id/btn_backsucesfrgtpass"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/back"
                android:layout_marginTop="50dp"
                android:textColor="#227E7C"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/buttonbackground"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yourtext"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/raleway"
                    android:layout_marginRight="15dp" />

                <TextView
                    android:id="@+id/txt_signupfrmsucesfrgtpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="right" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/havemeetbefore"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/raleway"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="right" />

                <TextView
                    android:id="@+id/txt_signinfrmsucesfrgtpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_in"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="right"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>