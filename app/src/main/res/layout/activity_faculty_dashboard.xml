<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.FacultyDashboard"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/backarrowfacultdash"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/backarrow"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hellofaculty"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:fontFamily="@font/raleway"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentLeft="true"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/txt_logoutfacultydash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Logout"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/raleway"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:padding="10dp">
                
                <Button
                    android:id="@+id/btn_viewrequest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btngrid"
                    android:text="@string/viewrequest"
                    android:textSize="12sp"
                    android:textColor="@color/btntxt"
                    android:layout_gravity="right"
                    android:layout_margin="20dp"/>

                <Button
                    android:id="@+id/btn_roomallocate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/Roomallocation"
                    android:background="@drawable/btngrid"
                    android:layout_margin="20dp"
                    android:textSize="12sp"
                    android:layout_gravity="right"
                    android:textColor="@color/btntxt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_searchStudent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btngrid"
                    android:text="@string/search"
                    android:textSize="12sp"
                    android:textColor="@color/btntxt"
                    android:layout_gravity="right"
                    android:layout_margin="20dp"/>

                <Button
                    android:id="@+id/btn_feesnotification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/feesnotify"
                    android:background="@drawable/btngrid"
                    android:textSize="12sp"
                    android:layout_margin="20dp"
                    android:layout_gravity="right"
                    android:textColor="@color/btntxt"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_editrooms"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:background="@drawable/btngrid"
                    android:text="@string/editroom"
                    android:textColor="@color/btntxt"
                    android:layout_gravity="right"
                    android:layout_margin="20dp"/>

                <Button
                    android:id="@+id/btn_addroom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/addroom"
                    android:background="@drawable/btngrid"
                    android:layout_margin="20dp"
                    android:textSize="12sp"
                    android:layout_gravity="right"
                    android:textColor="@color/btntxt"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>